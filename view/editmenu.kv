#:kivy 1.11.1

<EditMenu>:
    size_hint: (None, None)
    size: (40, 171)
    orientation: "vertical"
    pos_hint: {"center_x": .94, "center_y": .29}

    delete: delete_btn
    image: image_btn
    link: link_btn
    save: save_btn

    BoxLayout:
        size_hint: (None, None)
        size: self.parent.size
        pos: self.parent.pos
        orientation: "vertical"
        padding: 2.5
        spacing: "8"

        canvas:
            Color:
                rgb: 0x26 / 255.0, 0x32 / 255.0, 0x38 / 255.0
            Rectangle:
                pos: self.parent.pos
                size: self.parent.size
        Button:
            id: delete_btn
            on_press: root.delete_note()
            Image:
                source: "./icons/trash.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 35, 35
                allow_stretch: True
        Button:
            id: image_btn
            on_press: root.add_image()
            Image:
                source: "./icons/image.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 35, 35
                allow_stretch: True
            
        Button:
            id: link_btn
            on_press: root.link_note()
            Image:
                source: "./icons/link.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 35, 35
                allow_stretch: True
        Button:
            id: save_btn
            on_press: root.on_save()
            Image:
                source: "./icons/save.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 35, 35
                allow_stretch: True
