#:kivy 1.11.1


<MainWindow>:
    # buttonit jne
    size: 360, 640
    orientation: "vertical"

    close: close_btn
    edit: edit_btn
    settings: settings_btn


    # Top Right
    BoxLayout:
        size_hint: (None, None)
        size: (35, 35)
        pos_hint: {"center_x": .94, "center_y": .958}
        orientation: "horizontal"

        Button:      
            id: close_btn
            on_press: root.close_app()
            Image:
                source: "./icons/close.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 35, 35
                allow_stretch: True

    # Bottom Right
    BoxLayout:
        size_hint: (None, None)
        size: (35, 85)
        pos_hint: {"center_x": .94, "center_y": .08}
        orientation: "vertical"
        spacing: "15"

        ToggleButton:
            id: edit_btn
            on_state: root.toggle_edit(self.state)
            Image:
                source: "./icons/edit.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 35, 35
                allow_stretch: True
        Button:      
            id: settings_btn
            on_press: app.open_settings()
            Image:
                source: "./icons/settings.png"
                center_x: self.parent.center_x
                center_y: self.parent.center_y
                size: 35, 35
                allow_stretch: True
            




