#:kivy 1.11.1


<MainWindow>:
    # buttonit jne
    size: 360, 640
    orientation: "vertical"

    close: close_btn
    edit: edit_btn
    settings: settings_btn


    # Top Right
    BoxLayout:
        size_hint: (None, None)
        size: (35, 35)
        pos_hint: {"center_x": .94, "center_y": .953}
        orientation: "horizontal"

        Button:      
            id: close_btn
            text: "X"
            color: 0, 0, 0, 1
            width: 35
            height: 35
            background_color: 255, 255, 255, 255
            on_press: root.close_app()

    # Bottom Right
    BoxLayout:
        size_hint: (None, None)
        size: (35, 85)
        pos_hint: {"center_x": .94, "center_y": .08}
        orientation: "vertical"
        spacing: "15"

        ToggleButton:
            id: edit_btn
            text: "E"
            color: 0, 0, 0, 1
            width: 35
            height: 35
            background_color: 255, 255, 255, 255  
            on_state: root.toggle_edit(self.state)
        Button:      
            id: settings_btn
            text: "C"
            color: 0, 0, 0, 1
            width: 35
            height: 35
            background_color: 255, 255, 255, 255  
            on_press: app.open_settings()




