#:kivy 1.0
# kivy stuff

<MainWindow>:
    # buttonit jne
    size: 360, 640
    orientation: "vertical"

    close: close_btn
    edit: edit_btn
    options: options_btn


    # Top Right
    BoxLayout:
        size_hint: (None, None)
        size: (35, 35)
        pos_hint: {"center_x": .94, "center_y": .953}
        orientation: "horizontal"

        Button:      
            id: close_btn
            text: "X"
            color: 0, 0, 0, 1
            width: 35
            height: 35
            background_color: 255, 255, 255, 255
            on_press: root.close_app(self.size, self.parent.size)

    # Bottom Right
    BoxLayout:
        size_hint: (None, None)
        size: (35, 85)
        pos_hint: {"center_x": .94, "center_y": .08}
        orientation: "vertical"
        spacing: "15"

        ToggleButton:
            id: edit_btn
            text: "E"
            color: 0, 0, 0, 1
            width: 35
            height: 35
            background_color: 255, 255, 255, 255  
            on_state: root.toggle_edit(self.state)
        Button:      
            id: options_btn
            text: "O"
            color: 0, 0, 0, 1
            width: 35
            height: 35
            background_color: 255, 255, 255, 255  
            on_press: root.toggle_options(self.size, self.parent.size)

<Notepad@BoxLayout>:
    size_hint: (None, None)
    size: (291, 585)
    orientation: "vertical"

<TabLabel@Label>:
    size_hint: (None, None)
    size: (291, 40)
    orientation: "horizontal"
    halign: "left"
    valign: "middle"
    markup: True

<Note@BoxLayout>:
    size_hint: (None, None)
    size: (291, 545)
    orientation: "vertical"



<NotePanel>:
    size_hint: (None, None)
    size: (291, 620)
    pos_hint: {"center_x": .43, "center_y": .5}
    orientation: "horizontal"
    do_default_tab: False
    tab_width: 35
    tab_height: 35

    text_view: textInput

    TabbedPanelItem:
        text: '1'
